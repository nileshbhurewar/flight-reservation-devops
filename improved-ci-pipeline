/*
problems I fixed here which are in the old jenkins.backend-ci
1)- maven runs twice 
2)- Docker login using password in CLI
3)- git commit fails if no change
4)- minor structure improvements
*/

/*
1)- maven runs only once
2)- secure Docker login
3)- safe git commit 
4)- workspace cleanup
*/

pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "nileshbhurewar/flightreservation"
        IMAGE_TAG    = "${BUILD_NUMBER}"
        GIT_BRANCH   = "main"
        APP_DIR      = "FlightReservationApplication"
        DEPLOY_FILE  = "FlightReservationApplication/k8s/backend/deployment.yml"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: "${GIT_BRANCH}",
                    url: "https://github.com/nileshbhurewar/Flight-reservation.git"
            }
        }

        stage('Build, Test & SonarQube') {
            steps {
                withSonarQubeEnv('sonar') {
                    sh """
                      cd ${APP_DIR}
                      mvn clean verify sonar:sonar \
                      -Dsonar.projectKey=flight-reservation-system \
                      -Dsonar.projectName=flight-reservation-system
                    """
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('Docker Build & Push') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'docker-credentials',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh """
                      cd ${APP_DIR}
                      echo "${DOCKER_PASS}" | docker login -u "${DOCKER_USER}" --password-stdin
                      docker build -t ${DOCKER_IMAGE}:${IMAGE_TAG} .
                      docker push ${DOCKER_IMAGE}:${IMAGE_TAG}
                    """
                }
            }
        }

        stage('Update K8s Manifest (GitOps)') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'github-credentials',
                    usernameVariable: 'GIT_USER',
                    passwordVariable: 'GIT_TOKEN'
                )]) {
                    sh """
                      sed -i 's|image:.*|image: ${DOCKER_IMAGE}:${IMAGE_TAG}|' ${DEPLOY_FILE}

                      git config user.email "jenkins@ci.local"
                      git config user.name "jenkins-ci"

                      git add ${DEPLOY_FILE}
                      
                      git diff --cached --quiet || git commit -m "Update backend image to ${DOCKER_IMAGE}:${IMAGE_TAG}"
                      
                      git push https://${GIT_USER}:${GIT_TOKEN}@github.com/nileshbhurewar/Flight-reservation.git ${GIT_BRANCH}
                    """
                }
            }
        }
    }

    post {
        success {
            echo "CI completed successfully. Argo CD will deploy automatically."
        }
        failure {
            echo "CI failed."
        }
        always {
            cleanWs()
        }
    }
}
